Write a PHP program to prepare the student marks list.
Stud.html
<<!DOCTYPE html>
<html>
<head>
       <title>Student Marks Entry</title>
</head>
<body>
    <h2>Enter Student Details and Marks</h2>
    <form action="studmarks.php" method="post">
        <label for="student_name">Student Name:</label><br>
        <input type="text" id="student_name" name="student_name" required><br><br>
        <label for="roll_number">Roll Number:</label><br>
        <input type="text" id="roll_number" name="roll_number" required><br><br>
        <label for="subject1">Subject 1 Marks:</label><br>
        <input type="number" id="subject1" name="marks[]" min="0" max="100" required><br><br>
        <label for="subject2">Subject 2 Marks:</label><br>
        <input type="number" id="subject2" name="marks[]" min="0" max="100" required><br><br>
        <label for="subject3">Subject 3 Marks:</label><br>
        <input type="number" id="subject3" name="marks[]" min="0" max="100" required><br><br>
        <label for="subject4">Subject 4 Marks:</label><br>
        <input type="number" id="subject4" name="marks[]" min="0" max="100" required><br><br>
        <input type="submit" value="Submit Data">
    </form>
</body>
</html>
â€ƒ
Studmarks.php
<?php
if ($_SERVER["REQUEST_METHOD"] == "POST") 
{
    $studentName = htmlspecialchars($_POST['student_name']);
    $rollNumber = htmlspecialchars($_POST['roll_number']);
    $marks = $_POST['marks']; // This will be an array of marks
    $studentData = 
  [
        'name' => $studentName,
        'roll_number' => $rollNumber,
        'marks' => $marks // The array of marks for the 4 subjects
    ];
    echo "<h2>Student Data Received:</h2>";
    echo "<p><strong>Name:</strong> " . $studentData['name'] . "</p>";
    echo "<p><strong>Roll Number:</strong> " . $studentData['roll_number'] . "</p>";
    echo "<p><strong>Marks:</strong></p>";
    echo "<ul>";
    foreach ($studentData['marks'] as $subjectIndex => $mark) 
	{
        echo "<li>Subject " . ($subjectIndex + 1) . ": " . htmlspecialchars($mark) . "</li>";
            }
       echo "</ul>";
	}
	$totalMarks = array_sum($marks);
	$percentage = ($totalMarks / 400) * 100;
$grade = "";
if ($percentage >= 90) {
    	$grade = "A+";
} elseif ($percentage >= 80) {
    	$grade = "A";
} elseif ($percentage >= 70) {
    	$grade = "B";
} elseif ($percentage >= 60) {
    	$grade = "C";
} elseif ($percentage >= 50) {
    	$grade = "D";
} else {
    	$grade = "F";
}
echo "<p><strong>Total Marks</strong> " . $totalMarks . "</p>";
echo "<p><strong>Grade:</strong> " . $grade . "</p>";
?>







