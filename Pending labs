Slip15.php


<?php
$name=$_GET['ename'];
$des=$_GET['ed'];
$dep=$_GET['dep'];
$g=$_GET['gen'];
$salary=$_GET['esal'];
echo "Name :- ".$name."<br>";
echo "Des :- ".$des."<br>";
echo "Dep :- ".$dep."<br>";
echo "Gender : -" .$g."<br>";
echo "Salary : - ".$salary."<br>";
?>
