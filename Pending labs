php file



<!DOCTYPE html>
<head>
        <title>Registration Details</title>
</head>
<body>
    <h2>Student Registration Details</h2>
    <?php
    if ($_SERVER["REQUEST_METHOD"] == "POST") {
        echo "<p><strong>Student Name:</strong> " . htmlspecialchars($_POST['student_name']) . "</p>";
        echo "<p><strong>Gender:</strong> " . htmlspecialchars($_POST['gender']) . "</p>";
        echo "<p><strong>Program:</strong> " . htmlspecialchars($_POST['program']) . "</p>";

        if (isset($_POST['courses']) && is_array($_POST['courses'])) {
            echo "<p><strong>Courses Interested In:</strong></p>";
            echo "<ul>";
            foreach ($_POST['courses'] as $course) {
                echo "<li>" . htmlspecialchars($course) . "</li>";
            }
            echo "</ul>";
        } else {
            echo "<p><strong>Courses Interested In:</strong> None selected.</p>";
        }
    } else {
        echo "<p>No data submitted.</p>";
    }
    ?>
</body>
</html>
